# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=location_microservice
DB_SSLMODE=disable
DB_MAX_CONNS=20
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=3600
DB_CONN_MAX_IDLE_TIME=1800

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Server
API_HOST=0.0.0.0
API_PORT=8080
API_ENV=development

# Cache TTL (seconds)
TILES_CACHE_TTL=604800
SEARCH_CACHE_TTL=3600

# Logging
LOG_LEVEL=info

# Worker
WORKER_ENABLED=true
WORKER_CONSUMER_GROUP=location-enrichment-workers
WORKER_STREAM_READ_TIMEOUT=5000
WORKER_MAX_RETRIES=3
WORKER_TRANSPORT_RADIUS=1000
WORKER_TRANSPORT_TYPES=metro,train,tram,bus
